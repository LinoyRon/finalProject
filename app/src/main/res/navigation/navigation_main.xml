<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation_main"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.finalproject.Fragment.LoginFragment"
        android:label="LoginFragment"
        tools:layout="@layout/fragment_login"/>

    <fragment
        android:id="@+id/conversationFragment"
        android:name="com.example.finalproject.Fragment.ConversationFragment"
        tools:layout="@layout/fragment_conversation"
        android:label="ConversationFragment" >
        <action
            android:id="@+id/action_conversationFragment_to_chatFragment"
            app:destination="@id/chatFragment" />
    </fragment>
    <fragment
        android:id="@+id/chatFragment"
        android:name="com.example.finalproject.Fragment.ChatFragment"
        android:label="ChatFragment"
        tools:layout="@layout/fragment_chat"/>
    <fragment
        android:id="@+id/roomsFragment"
        android:name="com.example.finalproject.Fragment.RoomsFragment"
        android:label="RoomsFragment"
        tools:layout="@layout/fragment_rooms"/>
    <fragment
        android:id="@+id/profileFragment"
        android:name="com.example.finalproject.Fragment.ProfileFragment"
        android:label="ProfileFragment"
        tools:layout="@layout/fragment_profile"/>
</navigation>