<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_activated="true">
        <shape android:shape="rectangle">
            <gradient android:startColor="#E6B8B6B6"
                android:endColor="#E69F9D9D"
                android:angle="180"/>
            <corners android:radius="20dp"/>
        </shape>
    </item>

    <item android:state_pressed="false">
        <shape android:shape="rectangle">
            <gradient android:startColor="@color/ic_launcher_background"
                android:endColor="#828FB1"
                android:angle="180"/>
            <corners android:radius="20dp"/>
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <gradient android:startColor="#B39A82B1"
                android:endColor="#B3828CB1"
                android:angle="180"/>
            <corners android:radius="10dp"/>
        </shape>
    </item>



</selector>