<?xml version="1.0" encoding="utf-8"?>
<FrameLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="10dp">

    <LinearLayout
        android:id="@+id/itemMessageLayoutReceived"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/itemMessageThumbnailReceived"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/profile_circle_background"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="20dp"
            android:paddingVertical="10dp"
            android:layout_marginStart="10dp"
            android:orientation="vertical"
            android:background="@drawable/background_left_message">

            <TextView
                android:id="@+id/itemMessageOwnerReceived"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimary"
                android:paddingBottom="3dp"
                tools:text = "Name Name"/>

            <TextView
                android:id="@+id/itemMessageContentReceived"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text = "This is a message"/>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/itemMessageLayoutSent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="20dp"
            android:paddingVertical="10dp"
            android:layout_marginEnd="10dp"
            android:orientation="vertical"
            android:background="@drawable/background_right_message">

            <TextView
                android:id="@+id/itemMessageOwnerSent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:paddingBottom="3dp"
                tools:text = "Name Name"/>

            <TextView
                android:id="@+id/itemMessageContentSent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text = "This is a message"/>
        </LinearLayout>


        <ImageView
            android:id="@+id/itemMessageThumbnailSent"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/profile_circle_background"/>
    </LinearLayout>
</FrameLayout>